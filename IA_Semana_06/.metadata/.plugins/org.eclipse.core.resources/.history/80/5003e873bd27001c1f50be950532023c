package cibertec;

import java.awt.EventQueue;

import javax.swing.JDialog;
import javax.swing.JTextPane;
import javax.swing.JTextField;
import javax.swing.JLabel;
import javax.swing.JButton;

public class DialogoConfigurar extends JDialog {
	private JTextField textPrecio;
	private JTextField textDescuento;
	private JLabel lblPrecio;
	private JLabel lblDescuento;
	private JButton btnAceptar;
	private JButton btnCancelar;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					DialogoConfigurar dialog = new DialogoConfigurar();
					dialog.setDefaultCloseOperation(JDialog.DISPOSE_ON_CLOSE);
					dialog.setVisible(true);
				}
				catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the dialog.
	 */
	public DialogoConfigurar() {
		setTitle("Mantenimiento | Configurar");
		setBounds(100, 100, 450, 300);
		getContentPane().setLayout(null);
		
		textPrecio = new JTextField();
		textPrecio.setBounds(97, 11, 86, 20);
		getContentPane().add(textPrecio);
		textPrecio.setColumns(10);
		
		textDescuento = new JTextField();
		textDescuento.setBounds(97, 42, 86, 20);
		getContentPane().add(textDescuento);
		textDescuento.setColumns(10);
		
		lblPrecio = new JLabel("Precio (S/.)");
		lblPrecio.setBounds(10, 14, 57, 14);
		getContentPane().add(lblPrecio);
		
		lblDescuento = new JLabel("Descuento (%)");
		lblDescuento.setBounds(10, 45, 77, 14);
		getContentPane().add(lblDescuento);
		
		btnAceptar = new JButton("Aceptar");
		btnAceptar.setBounds(335, 10, 89, 23);
		getContentPane().add(btnAceptar);
		
		btnCancelar = new JButton("Cancelar");
		btnCancelar.setBounds(335, 41, 89, 23);
		getContentPane().add(btnCancelar);

	}
}
